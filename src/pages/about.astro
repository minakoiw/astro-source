---
import DefaultLayout from  '../layouts/defaultLayout.astro'; 

import {Content as AboutText} from '../mdContent/about-text.md';

const content = {
  title: 'About Minako',
  description: ' | About Minako',
  lang: 'en'
};
---
<style>
  .flexy {
    display: flex;
    column-gap: 3em;
  }
	@media (max-width: 700px) {
		.flexy {
			flex-wrap: wrap;
		}
	}

  img {
    margin: 1.9em 0 0 0;
    width: 100%;
    height: 100%;
		border-radius: 2em;
  }

  .about-text {
    min-width: 20%;
    font-size: 1.4rem;
		line-height: 150%;
  }
</style>

<DefaultLayout content={content}>
  <div class="flexy">
    <img src="../assets/in-the-gallery.jpg" alt="Minako in the gallery">
    <div class="about-text">
      <AboutText />
    </div>
  </div>
</DefaultLayout>