---
import DefaultLayout from  '../layouts/defaultLayout.astro'; 

import ContactForm from '../components/contactForm.astro';

const content = {
  title: 'Contact Minako',
  description: ' | Contact Minako',
  lang: 'en'
};
---
<style>
  .flexy {
    display: flex;
    column-gap: 3em;
  }

  img {
    margin: 1.5em 0 0 0;
    width: 100%;
    height: 100%;
    flex: 1;
  }

  .about-text {
    min-width: 20%;
    font-size: 1.5rem;
    flex: 2;
  }

  .formArea {
    margin: 0 10vw 0 5vw;
  }

  @media (max-width: 700px) {
    .formArea {
      margin: 0;
    }
  }

</style>

<DefaultLayout content={content}>
  <div class="formArea">
    <ContactForm />
  </div>
</DefaultLayout>